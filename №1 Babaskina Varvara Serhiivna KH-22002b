#include <stdio.h>

int main() {
//назначаємо змінні
    int t1, t2, t3; 
    
//зчитування чисел
    printf("Введіть три натуральних числа (t1, t2, t3): ");
    scanf("%d %d %d", &t1, &t2, &t3); 
    
//функція для перевірки чи всі числа задовольняють вимоги
    if (t1 <= 0 || t2 <= 0 || t3 <= 0 || t1 > 10000 || t2 > 10000 || t3 > 10000) {
        printf("Некоректні дані. Будь ласка, введіть натуральні числа не більше 10000.\n");
        return 0;
    }

//розрахунок загального часу який потрібен гостям щоб з'їсти пиріг
    double total_time = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    
//обчислення к-сті годин
    double hours = 1.0 / total_time;

//виведення результату
    printf("Час, за який гості можуть з'їсти пиріг: %.2f годин\n", hours);

    return 0;
}
