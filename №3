#include <stdio.h>

//функція для знаходження к-сті чисел з розрядами, де три однакові цифри не стоять поруч
long long countNumbers(int r) {
    long long dp[r + 1][2];
    dp[1][0] = 2;  //к-сть чисел з 1 розрядом, починаючи з 5
    dp[1][1] = 2;  //к-сть чисел з 1 розрядом, починаючи з 9

    for (int i = 2; i <= r; i++) {
        dp[i][0] = dp[i - 1][0] + dp[i - 1][1];  //к-сть чисел, починаючи з 5
        dp[i][1] = dp[i - 1][0] + dp[i - 1][1];  //к-сть чисел, починаючи з 9
    }

    return dp[r][0] + dp[r][1];
}

int main() {
    int r;

    //зчитування цілого числа р
    printf("Введіть ціле число р: ");
    scanf("%d", &r);

    //знаходження к-сті чисел з розрядами
    long long count = countNumbers(r);

    //виведення результату
    printf("Кількість чисел з %d розрядами: %lld\n", r, count);

    return 0;
}
